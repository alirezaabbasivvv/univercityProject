@model univercityProject.Models.Dtos.RequestViewModel

@{
    ViewData["Title"] = "Set Request Dates";
}

<h2>Set Request Dates</h2>

<form asp-action="CEOAcceptRequest" method="post">
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Doscription" class="control-label"></label>
        <textarea asp-for="Doscription" class="form-control"></textarea>
        <span asp-validation-for="Doscription" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Set Dates</button>
</form>
